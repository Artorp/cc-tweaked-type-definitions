{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "target": "es5",
    "moduleResolution": "node",
    "types": [
      "typescript-to-lua/language-extensions"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "declarations/**/*"
  ]
}
